<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80545454"
        android:weightSum="800"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_weight="155"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="22dp">


            <FrameLayout
                android:id="@+id/titleFame"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:background="@drawable/bg_title_dialog"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    style="@style/single_marquee"
                    app:strokeJoinStyle="miter"
                    android:id="@+id/txtTitle"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="5dp"
                    android:text="@string/loading"/>

            </FrameLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/bg_dialog"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txtContent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="-30dp"
                    android:fontFamily="@font/nunito_regular"
                    android:gravity="center"
                    android:text="@string/haven_t_saved_it_yet_do_you_want_to_exit"
                    android:textColor="@color/app_color"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:visibility="gone"
                    android:id="@+id/btnOk"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_btn_rate"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="@string/ok"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1.0:0.36"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtContent" />
                <TextView
                    android:id="@+id/btnNo"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_8_color"
                    android:fontFamily="@font/nunito_regular"
                    android:gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/no"
                    android:textColor="@color/app_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1.0:0.36"
                    app:layout_constraintEnd_toStartOf="@+id/btnYes"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtContent" />

                <TextView
                    android:id="@+id/btnYes"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_btn_loading_yes"
                    android:gravity="center"
                    android:text="@string/tv_yes"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nunito_regular"
                    app:layout_constraintDimensionRatio="1.0:0.36"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnNo"
                    app:layout_constraintTop_toTopOf="@+id/btnNo" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>