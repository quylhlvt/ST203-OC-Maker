<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_bg_splash">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/coda_extra_bold"
            android:gravity="center"

            android:textColor="@color/app_color"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvSetting"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:elevation="1dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_setting"
            app:layout_constraintBottom_toBottomOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTitle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageTitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/img_title_home"
            app:layout_constraintDimensionRatio="352:220"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTitle" />


        <ScrollView
            android:id="@+id/scvMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:elevation="1dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageTitle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--            gl05-->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.57" />

                <!--            gl063-->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl063"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="280dp" />
                <!--            gl063-->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl061"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="120dp" />

                <!--            btnCreate-->
                <ImageView
                    android:id="@+id/btnCreate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="16dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_frame_home1"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--            tv1-->
                <com.oc.maker.create.avatar2.utils.StrokeTextView
                    android:id="@+id/tv1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:fontFamily="@font/cherry_bomb_one_regular"
                    android:text="@string/pony_maker"
                    android:textColor="@color/ff5db6"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/btnCreate"
                    app:layout_constraintEnd_toEndOf="@+id/gl063"
                    app:layout_constraintStart_toEndOf="@+id/gl061"
                    app:layout_constraintTop_toTopOf="@+id/btnCreate"
                    app:strokeJoinStyle="miter"
                    app:strokeMiter="5dp"
                    style="@style/single_marquee"
                    />

                <!--            btnQuickMaker-->
                <ImageView
                    android:id="@+id/btnQuickMaker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_frame_home2"
                    app:layout_constraintTop_toBottomOf="@+id/btnCreate" />

                <!--            tv2-->
                <com.oc.maker.create.avatar2.utils.StrokeTextView
                    android:id="@+id/tv2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:text="@string/trending_custom"
                    android:textColor="@color/app_color"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/btnQuickMaker"
                    app:layout_constraintEnd_toEndOf="@+id/gl05"
                    app:layout_constraintStart_toStartOf="@+id/btnQuickMaker"
                    app:layout_constraintTop_toTopOf="@+id/btnQuickMaker"
                    android:fontFamily="@font/cherry_bomb_one_regular"
                    app:strokeJoinStyle="miter"
                    app:strokeMiter="5dp"
                    app:strokeWidth="2dp"
                    style="@style/single_marquee"
                    />

                <!--            btnMyAlbum-->
                <ImageView
                    android:id="@+id/btnMyAlbum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_frame_home3"
                    app:layout_constraintTop_toBottomOf="@+id/btnQuickMaker" />

                <!--            tv3-->
                <com.oc.maker.create.avatar2.utils.StrokeTextView
                    android:id="@+id/tv3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@string/my_work"
                    android:textColor="@color/_0091b2"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/btnMyAlbum"
                    app:layout_constraintEnd_toEndOf="@+id/btnMyAlbum"
                    app:layout_constraintStart_toStartOf="@+id/btnMyAlbum"
                    app:layout_constraintTop_toTopOf="@+id/btnMyAlbum"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="@font/cherry_bomb_one_regular"
                    app:strokeJoinStyle="miter"
                    app:strokeMiter="5dp"
                    app:strokeWidth="2dp"
                    style="@style/single_marquee"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>